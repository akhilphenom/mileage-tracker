{
  "expo": {
    "name": "mileage-tracker",
    "slug": "mileage-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mileagetracker",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/mileage-tracker-logo.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      {
        "assets": [
          "./assets/images/mileage-tracker-logo.svg",
          "./assets/images/bike-placeholder.png",
          "./assets/images/car-placeholder.png"
        ]
      }
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}